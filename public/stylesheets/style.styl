@import 'nib'

global-reset()

black = #111111
red = #FF4136
border-color = #BADA55
background-color = #faf9f0

:root
	font-size 18px

body
	height 100vh
	width 100vw
	display grid
	grid: 150px auto 30px / 50px auto 50px
	grid-auto-flow: row
	justify-items center
	box-sizing border-box
	font-family 'Georgia'
	background-color background-color
	color black

header
	padding 50px 10px
	align-self: center
	color black
	font-size 3rem
	grid-column: 1 / -1

.container
	width 100%
	grid-row: 2/span 1
	grid-column: 2 /span 1

.main-content
	height: 100%
	display grid
	grid-template-rows: 1fr auto

.posts
	display grid
	grid-template-rows: repeat(auto-fill, minmax(50px, 1fr))
	grid-gap: 10px

.post--container
	display grid
	grid-template-columns: 11fr 1fr
	padding 10px
	border 2px solid border-color

.post
	font-size 1rem

.delete
	justify-self: center
	align-self: center

.delete--button
	border-radius 5px
	border none
	background red
	color #C0ffee
	&:active
		top 4px
		opacity .8
		border none

.add-post--container
	padding 50px
	width: 100%
	grid-row 2 / span 1
	justify-self: center
	align-self: end

.add-post
	display grid
	grid-gap 10px
	grid-template-rows 40px auto 40px
	text-align center

.add-post textarea
	height 100px

.footer
	width 100vw
	height 30px
	background: black
	border-top 3px solid border-color
	color #C0ffee
	bottom: 0px
	display grid
	grid-row -1/span 1
	grid-column: 1/-1
	justify-content: center
	align-items: center
	font-size .75rem
	letter-spacing: 2px
